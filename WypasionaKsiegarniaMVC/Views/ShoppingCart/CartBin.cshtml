@{
    ViewBag.Title = "CartBin";
}
@using WypasionaKsiegarniaMVC.Models;
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />

</head>
<body>
    <h2>CartBin</h2>
    <h2>Index</h2>
    <table cellpadding="2" cellspacing="2" border="1">
        <tr>
            <th>ISBN</th>
            <th>Product</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Sub Total</th>
        </tr>
        @{
            double s = 0;
        }
        @if ((List<CartItem>)Session["cartbin"] != null)
        {
            foreach (CartItem item in (List<CartItem>)Session["cartbin"])
            {
                s += item.Product.Price * item.Quantity;
            <tr>
                <th>@item.Product.ISBN</th>
                <th>@item.Product.Title</th>
                <th>@item.Product.Price</th>
                <th>@item.Quantity</th>
                <th>@(item.Quantity * item.Product.Price) zł</th>
                <th>@Html.ActionLink("Order Now", "OrderNow2", "ShoppingCart", new { id = item.Product.ProductID, amount = item.Quantity }, null)</th>
            </tr>
            }
        }
        <tr>
            <th align="left" colspan="4">Sum</th>
            <td>@s</td>
        </tr>
    </table>
    <br /><br />
    @Html.ActionLink("Continue Shopping", "Index", "ProductList")
    <br /><br />
    @Html.ActionLink("Cart", "Index", "ShoppingCart")
</body>

</html>